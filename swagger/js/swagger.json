{
  "openapi": "3.0.3",
  "info": {
    "title": "API Gestion Contacts",
    "version": "1.0.0",
    "description": "API d’authentification et de gestion de contacts (JWT + MongoDB)."
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Serveur local"
    }
  ],
  "tags": [
    { "name": "Utilisateurs", "description": "Inscription et connexion" },
    { "name": "Contacts", "description": "CRUD Contacts (routes protégées)" }
  ],
  "paths": {
    "/api/users/register": {
      "post": {
        "tags": ["Utilisateurs"],
        "summary": "Inscription d’un utilisateur",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RegisterInput" },
              "examples": {
                "default": {
                  "value": { "username": "alice", "password": "secret123" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Utilisateur créé",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/RegisterResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "409": { "description": "Nom d’utilisateur déjà pris" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": ["Utilisateurs"],
        "summary": "Connexion (JWT)",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginInput" },
              "examples": {
                "default": {
                  "value": { "username": "alice", "password": "secret123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authentification réussie",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthLoginResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "description": "Identifiants invalides" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },

    "/api/contact": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Lister les contacts de l’utilisateur connecté",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Liste des contacts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Contact" }
                }
              }
            }
          },
          "401": { "description": "Non authentifié" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      },
      "post": {
        "tags": ["Contacts"],
        "summary": "Créer un contact",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContactCreate" },
              "examples": {
                "default": {
                  "value": {
                    "contactname": "Doe",
                    "contactFirstname": "John",
                    "contactPhone": "+33600000000"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contact créé",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ContactCreatedResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "description": "Non authentifié" },
          "409": { "description": "Contact déjà existant (même nom pour cet utilisateur)" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },

    "/api/contact/{id}": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Obtenir un contact par ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID du contact"
          }
        ],
        "responses": {
          "200": {
            "description": "Contact trouvé",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Contact" }
              }
            }
          },
          "401": { "description": "Non authentifié" },
          "404": { "description": "Contact non trouvé" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      },
      "patch": {
        "tags": ["Contacts"],
        "summary": "Modifier un contact",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID du contact"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContactUpdate" },
              "examples": {
                "default": {
                  "value": {
                    "contactname": "Doe",
                    "contactFirstname": "Jane",
                    "contactPhone": "+33711111111"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Contact modifié",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ContactCreatedResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "description": "Non authentifié" },
          "404": { "description": "Contact non trouvé" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      },
      "delete": {
        "tags": ["Contacts"],
        "summary": "Supprimer un contact",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID du contact"
          }
        ],
        "responses": {
          "200": {
            "description": "Contact supprimé",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Contact supprimé" }
                  }
                }
              }
            }
          },
          "401": { "description": "Non authentifié" },
          "404": { "description": "Contact non trouvé" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Mettre le token renvoyé par /api/users/login (sans guillemets)."
      }
    },

    "responses": {
      "BadRequest": {
        "description": "Requête invalide",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" },
            "examples": {
              "missingFields": { "value": { "message": "Données manquantes" } }
            }
          }
        }
      },
      "ServerError": {
        "description": "Erreur serveur",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" },
            "examples": {
              "default": { "value": { "message": "Erreur serveur" } }
            }
          }
        }
      }
    },

    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "message": { "type": "string" }
        }
      },

      "UserPublic": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "66f1c5b1e8e3a4a9b6a1d234" },
          "username": { "type": "string", "example": "alice" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },

      "RegisterInput": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": { "type": "string", "minLength": 3, "maxLength": 30 },
          "password": { "type": "string", "minLength": 6 }
        }
      },
      "RegisterResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "username": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },

      "LoginInput": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "AuthLoginResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "_id": { "type": "string" },
              "username": { "type": "string" }
            }
          },
          "token": { "type": "string" }
        },
        "example": {
          "user": { "_id": "66f1c5b1e8e3a4a9b6a1d234", "username": "alice" },
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
        }
      },

      "Contact": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "contactname": { "type": "string" },
          "contactFirstname": { "type": "string" },
          "contactPhone": { "type": "string" },
          "createdby": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "ContactCreate": {
        "type": "object",
        "required": ["contactname", "contactFirstname", "contactPhone"],
        "properties": {
          "contactname": { "type": "string", "minLength": 3, "maxLength": 30 },
          "contactFirstname": { "type": "string" },
          "contactPhone": { "type": "string" }
        }
      },
      "ContactUpdate": {
        "type": "object",
        "required": ["contactname", "contactFirstname", "contactPhone"],
        "properties": {
          "contactname": { "type": "string" },
          "contactFirstname": { "type": "string" },
          "contactPhone": { "type": "string" }
        }
      },
      "ContactCreatedResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "contactname": { "type": "string" },
          "contactFirstname": { "type": "string" },
          "contactPhone": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}
